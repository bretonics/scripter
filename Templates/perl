my = "";
my = "";
my $usage = "\n\n$0 [options]\n
Options:
    -file   Input file
    -
    -
    -help   Show this message
\n";

# OPTIONS
GetOptions(
    'file=s'        =>\$FILE,
    '=s'        =>\$,
    ':s'        =>\$,
    ''      =>\,
    ''      =>\,
    help            =>sub{pod2usage($usage);}
)or pod2usage(2);

checkCLA();
